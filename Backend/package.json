{
  "name": "hms-backend",
  "version": "1.0.0",
  "description": "Hostel Management System Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "postinstall": "npm run build",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "stop:prod": "pm2 stop ecosystem.config.js",
    "reload:prod": "pm2 reload ecosystem.config.js",
    "logs": "pm2 logs hms-backend",
    "backup": "scripts\\backup.bat",
    "seed:menu": "ts-node src/scripts/seedMessMenu.ts",
    "seed:menu:force": "ts-node src/scripts/seedMessMenu.ts --force"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "morgan": "^1.10.1",
    "typescript": "^5.9.3",
    "uuid": "^11.0.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.10.7",
    "@types/uuid": "^10.0.0",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
